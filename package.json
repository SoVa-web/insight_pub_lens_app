{
  "name": "scientific-publications-search-server",
  "version": "1.0.0",
  "description": "A backend server for scientific publications search",
  "main": "src/main.ts",
  "scripts": {
    "start": "ts-node src/main.ts",
    "build": "tsc",
    "start:prod": "npm run migrate:up && node --enable-source-maps dist/src/main",
    "prestart": "npm run build",
    "migrate:create": "node-pg-migrate create --tsconfig='tsconfig.json'",
    "migrate:up": "node-pg-migrate up --tsconfig='tsconfig.json'",
    "migrate:down": "node-pg-migrate down --tsconfig='tsconfig.json' --no-check-order",
    "migrate:redo": "node-pg-migrate redo --tsconfig='tsconfig.json'",
    "migrate": "node-pg-migrate --tsconfig='tsconfig.json'",
    "eslint": "eslint . --ext .js,.ts",
    "eslint:fix": "eslint . --ext .js,.ts --fix",
    "fmt": "prettier --ignore-path .eslintignore --write .",
    "fmt:check": "prettier --ignore-path .eslintignore -c .",
    "fix": "npm run -s eslint:fix && npm run -s fmt",
    "lint": "npm run -s eslint && npm run -s fmt:check"
  },
  "dependencies": {
    "@metarhia/sql": "^0.2.10",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^8.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.4.7",
    "joi": "^17.13.3",
    "jsonwebtoken": "^8.5.1",
    "node-pg-migrate": "^6.2.2",
    "passport": "^0.5.3",
    "passport-jwt": "^4.0.0",
    "pg": "^8.11.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.0",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nodemon": "^2.0.14",
    "prettier": "^3.0.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.5.4"
  }
}
